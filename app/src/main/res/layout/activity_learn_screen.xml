<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/empty_background"
    tools:context=".activities.learn.LearnScreen">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/learnPageTitleView"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/learn_title" />

        <ImageButton
            android:id="@+id/learnScreenBackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/back_arrow" />

        <ScrollView
            android:id="@+id/learnBtnScrollView"
            android:layout_width="match_parent"
            android:layout_height="432dp"
            android:layout_below="@+id/learnPageTitleView"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/menuBtnLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/zero_to_nine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/zero_to_nine_btn" />

                <ImageButton
                    android:id="@+id/ten_to_nineteen_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ten_to_nineteen_btn" />

                <ImageButton
                    android:id="@+id/twenty_to_twentynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/twenty_to_twentynine_btn" />

                <ImageButton
                    android:id="@+id/thirty_to_thirtynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/thirty_to_thirtynine_btn" />

                <ImageButton
                    android:id="@+id/forty_to_fortynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/forty_to_fortynine_btn" />

                <ImageButton
                    android:id="@+id/fifty_to_fiftynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/fifty_to_fiftynine_btn" />

                <ImageButton
                    android:id="@+id/sixty_to_sixtynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sixty_to_sixtynine_btn" />

                <ImageButton
                    android:id="@+id/seventy_to_seventynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/seventy_to_seventynine_btn" />

                <ImageButton
                    android:id="@+id/eighty_to_eightynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/eighty_to_eightynine_btn" />

                <ImageButton
                    android:id="@+id/ninety_to_ninetynine_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="25dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ninety_to_ninetynine_btn" />
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>