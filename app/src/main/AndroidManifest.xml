<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.germanmemoriserapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.LoadScoresScreen">
        </activity>
        <activity android:name=".activities.RecentScoresScreen" >
        </activity>
        <activity android:name=".activities.BestScoresScreen" />
        <activity android:name=".activities.ScoreBoardScreen" />
        <activity android:name=".activities.LearnSelectionScreen" />
        <activity android:name=".activities.LearnScreen" />
        <activity android:name=".activities.LoadAudioScreen" />
        <activity android:name=".activities.GameScreen" />
        <activity android:name=".activities.GameOverScreen" />
        <activity android:name=".activities.MenuScreen"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>